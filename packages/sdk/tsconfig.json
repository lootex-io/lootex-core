{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "lib": ["ES2021", "DOM"],
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./node_modules", "./dist"],
  "typedocOptions": {
    "out": "./docs",
    "entryPoints": ["src/exports/**/*.ts"],
    "exclude": [
      "src/**/*.test.ts",
      "src/**/*.test.tsx",
      "src/**/*.test-d.ts",
      "node_modules/**/*",
      "../../node_modules/**/*"
    ],
    "excludeInternal": true,
    "includeVersion": true
  }
}

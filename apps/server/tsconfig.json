{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "incremental": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "maxNodeModuleJsDepth": 1,
    "rootDir": "./src"
  },
  "exclude": [
    "scripts/**/*",
    "dist"
  ]
}